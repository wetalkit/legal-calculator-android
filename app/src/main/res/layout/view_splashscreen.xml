<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="80dp"
            android:text="@string/splash_title"
            android:textColor="#FFF"
            android:textSize="26sp" />

        <mk.wetalkit.legalcalculator.views.HtmlTextView
            android:id="@+id/textView_continue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="?android:selectableItemBackground"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/splash_continue_button"
            android:textColor="#DDD"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView_wetalkit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:background="?android:selectableItemBackground"
        android:gravity="center"
        android:padding="8dp"
        android:text="WeTalkIT"
        android:textColor="#FFF"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/textView_legahackers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:background="?android:selectableItemBackground"
        android:gravity="center"
        android:padding="8dp"
        android:text="Skopje Legal Hackers"
        android:textColor="#FFF"
        android:textSize="16sp" />

</FrameLayout>